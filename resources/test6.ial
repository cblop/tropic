institution starWars;
% TYPES ----------
type Agent;
type Role;
type Trope;
type Phase;
type Place;
type PlaceName;
type Quest;
type Object;
type ObjectName;

% FLUENTS ----------
fluent role(Agent, Role);
fluent phase(Trope, Phase);
fluent place(PlaceName, Place);
fluent object(ObjectName, Object);
fluent at(Agent, Place);

% EXTERNAL EVENTS: The Hero's Journey ----------
exogenous event go(Agent, PlaceName);
exogenous event meet(Agent, Agent);
% CREATION EVENT -----------
create event startShow;

% INST EVENTS: The Hero's Journey ----------
inst event intHerosJourney(Agent, Agent, PlaceName, PlaceName);
inst event intGo(Agent, PlaceName);
% INITIATES: The Hero's Journey ----------
intHerosJourney(R, S, T, U) initiates phase(herosJourney, phaseA), perm(go(R, U)) if phase(herosJourney, inactive), role(R, hero), place(U, home);
intHerosJourney(R, S, T, U) initiates phase(herosJourney, phaseB), perm(meet(R, S)) if phase(herosJourney, phaseA), role(S, dispatcher), role(R, hero);
intHerosJourney(R, S, T, U) initiates phase(herosJourney, phaseC), perm(go(R, U)) if phase(herosJourney, phaseB), role(R, hero), place(U, home);
intHerosJourney(R, S, T, U) initiates phase(herosJourney, done), obl(go(R, T)) if phase(herosJourney, phaseC);
% TERMINATES: The Hero's Journey ----------
intHerosJourney(R, S, T, U) terminates phase(herosJourney, inactive) if phase(herosJourney, inactive);
intHerosJourney(R, S, T, U) terminates phase(herosJourney, phaseA), perm(go(R, U)) if phase(herosJourney, phaseA);
intHerosJourney(R, S, T, U) terminates phase(herosJourney, phaseB), perm(meet(R, S)) if phase(herosJourney, phaseB);
intHerosJourney(R, S, T, U) terminates phase(herosJourney, phaseC), perm(go(R, U)) if phase(herosJourney, phaseC);
intHerosJourney(R, S, T, U) terminates phase(herosJourney, done), obl(go(R, T)) if phase(herosJourney, done);
intGo(S, U) terminates obl(go(R, T)) if role(R, hero), place(T, away), role(S, villain), place(U, home);
% GENERATES: The Hero's Journey ----------
go(R, U) generates intHerosJourney(R, S, T, U) if role(R, hero), place(U, home);
meet(R, S) generates intHerosJourney(R, S, T, U) if role(S, dispatcher), role(R, hero);
go(R, T) generates intGo(R, T) if role(R, hero), place(T, away);
go(S, U) generates intGo(S, U) if role(S, villain), place(U, home);

% INITIALLY: -----------
initially
    pow(intHerosJourney(R, S, T, U)),
    phase(herosJourney, inactive),
    role(lukeSkywalker, hero),
    role(obiWan, dispatcher),
    place(tatooine, home);
